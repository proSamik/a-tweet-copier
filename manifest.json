{
  "manifest_version": 3,
  "name": "A Tweet Copier",
  "version": "1.0",
  "description": "Add copy buttons to tweets on X.com",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tweet Copier"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://x.com/*", "https://twitter.com/*"],
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
} 